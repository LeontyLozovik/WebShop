@using Repository.DataModels;
@model IEnumerable<Product>;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Products</h1>
<p>
    <button class="btn btn-primary"
            onclick="openModal({ url: '/Product/Create'})"
            data-toggle="ajax-modal"
            data-target="Modal">
            Create New
    </button>
</p>
<table class="table table-stripet">
    <thead>
        <tr>
            <th class="col-md-5">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="col-md-5 text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td class="d-flex justify-content-end">
                    <button class="btn btn-outline-primary">@Html.ActionLink("Details", "Details", new { id = product.Id }, new { @class = "text-decoration-none text-reset"})</button>
                </td>
            </tr>
        }
    </tbody>
</table>
